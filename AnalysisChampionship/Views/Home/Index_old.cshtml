                            <tr>
                                <th>Nome</th>
                                <th>Posição</th>
                                <th>Partidas</th>
                                <th>% Vitorias</th>
                                <th>% Empates</th>
                                <th>% Derrotas</th>
                                <th>% Over 1.5</th>
                                <th>% Over 2.5</th>
                                <th>% Under 2.5</th>
                                <th>% Under 3.5 </th>
                                <th>% Ambas</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.Mandante.Nome</td>
                                <td>@Model.Mandante.Posicao</td>
