@model AnalysisChampionship.Models.Jogador

@using (Html.BeginForm("Salvar", "Jogador", FormMethod.Post))
{
    <div class="form-group">
        <select name="TimeID" autofocus>
            @foreach (var item in ViewData["Times"] as List<AnalysisChampionship.Models.TimeNBA>)
            {
                <option value="@item.ID">@item.Nome</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="text" name="Nome" placeholder="Nome" />
    </div>
    <input type="submit" class="btn btn-primary btn-user btn-block" value="Salvar" />
}
