@model List<AnalysisChampionship.Models.Jogador>
<fieldset class="border p-2">
    <div class="row mb-2">
        <h1 class="h3 mb-2 text-gray-800 col-md-11">Jogadores</h1>
        <a href="/Jogador/Editar/" class="btn btn-primary btn-icon-split">
            <span class="text">Novo</span>
        </a>
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Time</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var jogador in Model)
                        {
                            <tr>
                                <td>@jogador.Nome</td>
                                <td>@jogador.Time.Nome</td>
                                <td>
                                    <a href="/JogadorStats/Index/?jogadorID=@jogador.ID" class="btn btn-primary btn-icon-split">
                                        <span class="text">Stats</span>
                                    </a>
                                    <a href="/Jogador/Deletar/@jogador.ID" class="btn btn-primary btn-icon-split">
                                        <span class="text">Deletar</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</fieldset>
}