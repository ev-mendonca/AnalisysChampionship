@model AnalysisChampionship.Models.Classificacao
<fieldset class="border p-2">
    <div class="row mb-2">
        <h1 class="h3 mb-2 text-gray-800 col-md-11">Classificação @Model.Competicao</h1>
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Posição</th>
                            <th>Time</th>
                            <th>Jogos</th>
                            <th>Vitorias</th>
                            <th>Empates</th>
                            <th>Derrotas</th>
                            <th>Pontos</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Times.Count; i++)
                        {
                        <tr>
                            <td>@(i+1)º</td>
                            <td>@Model.Times[i].Nome</td>
                            <td>@Model.Times[i].Partidas</td>
                            <td>@Model.Times[i].Vitorias</td>
                            <td>@Model.Times[i].Empates</td>
                            <td>@Model.Times[i].Derrotas</td>
                            <td>@Model.Times[i].Pontuacao</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</fieldset>
