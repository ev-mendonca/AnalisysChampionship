@model AnalysisChampionship.Models.Campeonato

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <input type="hidden" name="CampeonatoID" value="@Model.ID" />
    <div class="form-group">
        <select name="TimeCasaID" autofocus>
            @foreach (var item in ViewData["Times"] as List<AnalysisChampionship.Models.Time>)
            {
                <option value="@item.ID">@item.Nome</option>

            }
        </select>
    </div>
    <div class="form-group">
        <select name="TimeForaID">
            @foreach (var item in ViewData["Times"] as List<AnalysisChampionship.Models.Time>)
            {
                <option value="@item.ID">@item.Nome</option>

            }
        </select>
    </div>
    <input type="submit" class="btn btn-primary btn-user btn-block" value="Salvar" />
}


